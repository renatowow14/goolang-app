#!/bin/sh

echo '=============================================================='
echo "[INFO] directory: $(pwd)  user: $(id -u) - script: $0" 
echo '=============================================================='=='

set -x
cd /tmp/src/
go build -o goserver main.go
mv -f ./goserver /opt/app-root/src/goserver
mv -f ./templates/ /opt/app-root/src/templates
mv -f ./public/ /opt/app-root/src/public
